<h1 class="text-center mb-3">{{title}}</h1>
<form action="/groups/izone" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="nickname">Age</label>
        <input type="text" name="age" class="form-control">
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block m-3">
</form>

<h4>Members</h4>
<ul class="list-group">
    {{#each members}}
    <li class="list-group-item">Full Name: {{this.name}} <br>Ranking by age: {{this.ranking}} <br><br></li>
    {{/each}}
</ul>

<a href="/groups/izone" class="btn btn-light mt-4">Visit API</a>